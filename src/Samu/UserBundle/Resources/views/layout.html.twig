{% extends "::layout.html.twig" %}
{% block stylesheets 'bundles/samuuser/css/*' %}
		<link rel="stylesheet" href="{{ asset('bundles/samuuser/css/style.css') }}" type="text/css" media="all" />
{% endblock %}

{% block body %}

  {# On affiche les messages flash que définissent les contrôleurs du bundle #}
  {% for key, message in app.session.flashbag.all() %}
  
    <div class="alert alert-{{ key }}">
      {{ message|trans({}, 'FOSUserBundle') }}
    </div>

  {% endfor %}

  {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
  {% block fos_user_content %}
  <div class="login">
	<form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
    	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" /></br>

		<label for="username">{{ 'security.login.username'|trans }}</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></br>

		<label for="password">{{ 'security.login.password'|trans }}</label>
		<input type="password" id="password" name="_password" required="required" /></br>

		<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
		<input type="checkbox" id="remember_me" name="_remember_me" value="on" /></br>

		<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
		</form>
  </div>

  {% endblock fos_user_content %}

{% endblock %}